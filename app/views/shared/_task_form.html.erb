<%= form_with(model: @task) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_field :title, placeholder: "What's new task?" %>
    </div>
    <div>
    <%= f.select :priority, [["☆", 1], ["☆☆", 2], ["☆☆☆", 3], ["☆☆☆☆", 4], ["☆☆☆☆☆", 5]], prompt: "Priority (Required)" %>
    </div>
    <div>
    <%= f.date_select :due_date %>
    </div>
    <div>
    <%= f.text_area :memo, placeholder: "Memo (Optional)"%>
    </div>

    <%= f.submit "Create Task", class: "btn btn-primary" %>
  <% end %>