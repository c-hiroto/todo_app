<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <% if current_user.admin? && !current_user?(@user) %>
        | <%= link_to "delete", @user, data: { "turbo-method": :delete,
                                          turbo_confirm: "You sure?" } %> |
        <% end %>
    </section>
  </aside>
</div>